# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=5000
APP_NAME="Medivoy Healthcare System"
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://user:password@db.sql.xata.sh/medivoy:main?sslmode=require
MONGODB_URL=mongodb+srv://user:password@cluster.mongodb.net/medivoy

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://127.0.0.1:6379
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_HOST=127.0.0.1

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# IMAGEKIT.IO CONFIGURATION - MEDIA STORAGE
# ============================================================================
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
IMAGEKIT_FOLDER_PREFIX=medivoy
IMAGEKIT_FOLDER_INSURANCE=/insurance-documents
IMAGEKIT_FOLDER_MEDICAL=/medical-documents
IMAGEKIT_FOLDER_PRESCRIPTIONS=/prescriptions
IMAGEKIT_FOLDER_LAB_REPORTS=/lab-reports
IMAGEKIT_FOLDER_USER_AVATARS=/user-avatars
IMAGEKIT_FOLDER_HOSPITAL_LOGOS=/hospital-logos
IMAGEKIT_FOLDER_DOCTOR_IMAGES=/doctor-images

# ============================================================================
# STRIPE PAYMENT GATEWAY
# ============================================================================
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================================================
# RAZORPAY PAYMENT GATEWAY
# ============================================================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ============================================================================
# EMAIL CONFIGURATION - SENDGRID
# ============================================================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@medivoy.com
SENDGRID_FROM_NAME=Medivoy Healthcare

# ============================================================================
# SMS CONFIGURATION - TWILIO
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# GOOGLE TRANSLATE API
# ============================================================================
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
GOOGLE_TRANSLATE_PROJECT_ID=your_google_cloud_project_id
SUPPORTED_LANGUAGES=en,hi,es,fr,de,it,pt,ru,ja,ko,zh,ar

# ============================================================================
# GOOGLE MEET INTEGRATION
# ============================================================================
GOOGLE_MEET_ENABLED=true
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5000/auth/google/callback

# ============================================================================
# AGORA VIDEO CONSULTATION
# ============================================================================
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
AGORA_CUSTOMER_KEY=your_agora_customer_key
AGORA_CUSTOMER_SECRET=your_agora_customer_secret

# ============================================================================
# DATABASE ERROR HANDLER - MOCK DATA
# ============================================================================
USE_MOCK_DATA=false
DATABASE_FALLBACK_ENABLED=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
DB_LOG=false
LOG_FILE=./logs/app.log

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# ============================================================================
# SECURITY
# ============================================================================
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=86400
ENCRYPTION_KEY=your_32_character_encryption_key_min
ENCRYPTION_ALGORITHM=aes-256-cbc

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://medivoy.com
CORS_CREDENTIALS=true

# ============================================================================
# FEATURES FLAGS
# ============================================================================
FEATURE_BOOKING_ENABLED=true
FEATURE_PAYMENTS_ENABLED=true
FEATURE_CONSULTATIONS_ENABLED=true
FEATURE_MEDICAL_RECORDS_ENABLED=true
FEATURE_MULTILINGUAL_ENABLED=true
FEATURE_VIDEO_CALLS_ENABLED=true
FEATURE_INSURANCE_ENABLED=true

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png,.gif
FILE_UPLOAD_TIMEOUT=30000
