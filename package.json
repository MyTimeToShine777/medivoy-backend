{
    "name": "medivoy-backend",
    "version": "1.0.0",
    "description": "Medivoy - Healthcare Management Backend API",
    "type": "module",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "format": "prettier --write src/**/*.js",
        "prisma:generate": "dotenvx run -- prisma generate",
        "prisma:pull": "dotenvx run -- prisma db pull",
        "prisma:push": "dotenvx run -- prisma db push",
        "prisma:migrate": "dotenvx run -- prisma migrate dev",
        "prisma:studio": "dotenvx run -- prisma studio",
        "prisma:format": "dotenvx run -- prisma format",
        "prisma:merge": "node scripts/merge-prisma.js"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.51.1",
        "apple-signin-auth": "^2.0.0",
        "aws-sdk": "^2.1692.0",
        "axios": "^1.13.2",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "boxen": "^8.0.1",
        "chalk": "^5.6.2",
        "cloudinary": "^2.8.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "csv-writer": "^1.6.0",
        "exceljs": "^4.4.0",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "express-session": "^1.17.3",
        "express-validator": "^7.3.0",
        "firebase-admin": "^13.6.0",
        "google-auth-library": "^10.5.0",
        "helmet": "^7.1.0",
        "hpp": "^0.2.3",
        "imagekit": "^6.0.0",
        "joi": "^18.0.1",
        "jsonwebtoken": "9.0.2",
        "mongoose": "^8.0.3",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.10",
        "passport": "^0.7.0",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "pdfkit": "^0.17.2",
        "pg": "^8.11.3",
        "qrcode": "^1.5.4",
        "rate-limit": "^0.1.1",
        "razorpay": "^2.9.6",
        "redis": "^4.6.12",
        "sharp": "^0.34.5",
        "streamifier": "^0.1.1",
        "stripe": "^19.3.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "twilio": "^5.10.4",
        "ua-parser-js": "^2.0.6",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@prisma/client": "^6.19.0",
        "eslint": "^8.55.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "prisma": "^6.19.0"
    }
}